{
  "name": "nestjs-solana-kit",
  "version": "0.2.0",
  "description": "NestJS module for Solana blockchain integration with @solana/kit - RPC, transactions, subscriptions, and utilities",
  "author": "haihv",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "keywords": [
    "nestjs",
    "solana",
    "blockchain",
    "web3",
    "solana-kit",
    "solana-web3",
    "solana-rpc",
    "solana-transaction",
    "solana-subscription",
    "websocket",
    "crypto",
    "typescript",
    "dependency-injection"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haihv/nestjs-solana-kit.git"
  },
  "bugs": {
    "url": "https://github.com/haihv/nestjs-solana-kit/issues"
  },
  "homepage": "https://github.com/haihv/nestjs-solana-kit#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" --log-level warn",
    "lint": "eslint \"src/**/*.ts\" --fix --quiet",
    "lint:check": "eslint \"src/**/*.ts\" --quiet",
    "type-check": "tsc --noEmit",
    "test": "vitest run 2>/dev/null",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage 2>/dev/null",
    "prepublishOnly": "npm run type-check && npm run build && npm run test",
    "prepare": "husky",
    "preversion": "npm run type-check && npm run test",
    "postversion": "git push --follow-tags",
    "release:patch": "npm version patch -m 'release: v%s'",
    "release:minor": "npm version minor -m 'release: v%s'",
    "release:major": "npm version major -m 'release: v%s'"
  },
  "dependencies": {
    "@solana/compat": "^5.1.0",
    "@solana/kit": "^5.1.0",
    "@solana/web3.js": "^1.98.4"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0",
    "reflect-metadata": "^0.1.13 || ^0.2.0",
    "rxjs": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "reflect-metadata": {
      "optional": false
    },
    "rxjs": {
      "optional": false
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/common": "^11.1.9",
    "@nestjs/core": "^11.1.9",
    "@nestjs/testing": "^11.1.9",
    "@swc/core": "^1.15.7",
    "@types/node": "^24.10.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "unplugin-swc": "^1.5.9",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix --quiet",
      "prettier --write --log-level warn"
    ]
  }
}
